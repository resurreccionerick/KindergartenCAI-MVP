<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher.Subject.Audio.EditAudioActivity">

    <ImageView
        android:id="@+id/imgEditAudio"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/icon_add_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEditAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/imgEditAudio"
        app:layout_constraintStart_toStartOf="@+id/imgEditAudio"
        app:layout_constraintTop_toBottomOf="@+id/imgEditAudio" />

    <Button
        android:id="@+id/btnSaveAudio"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="@+id/txtEditAudio"
        app:layout_constraintTop_toBottomOf="@+id/btnEditAudio" />

    <include
        android:id="@+id/progressDialog"
        layout="@layout/progressbar_loading" />

    <Button
        android:id="@+id/btnEditAudio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="Add Audio"
        app:layout_constraintEnd_toEndOf="@+id/txtEditAudio"
        app:layout_constraintStart_toStartOf="@+id/txtEditAudio"
        app:layout_constraintTop_toBottomOf="@+id/txtEditAudio" />

</androidx.constraintlayout.widget.ConstraintLayout>